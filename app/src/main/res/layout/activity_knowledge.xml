<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tl_knowledge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:tl_underline_color="#f1f1f1"
        app:tl_indicator_color="#f13232"
        app:tl_textUnselectColor="#666666"
        app:tl_textSelectColor="#f13232"
        app:tl_indicator_margin_left="30dp"
        app:tl_indicator_margin_right="30dp"
        app:tl_divider_width="20dp"
        app:tl_indicator_margin_top="10dp"
        />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_activity_knowledge"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tl_knowledge"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>